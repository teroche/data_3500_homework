apple_price = 1.25
number_purchased = 3
tax = 1.07
total_bill = apple_price * number_purchased * tax
if total_bill == 0:
    print("Please check your inputs. The total bill is 0.")
else:
 print(f"Number of apples purchased: {number_purchased}")
    print(f"Total bill (with tax): ${total_bill:.2f}")
